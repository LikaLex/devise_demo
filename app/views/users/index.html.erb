<script>
    window.totalPages = parseInt(<%= @users.total_pages %>)
</script>

<div class="users">
  <%= form_with url: users_path, method: :get, id: :search_form do |f| %>
      <%= f.text_field :query %>
      <%= f.hidden_field :page %>
  <% end %>
  <table id="users_table" class="table table-hover table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>email</th>
        <th>state</th>
        <th class="hidden"></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'user', collection: @users %>
    </tbody>
  </table>
</div>
